<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".AuthorizationFragment">

    <TextView
        android:id="@+id/authorization_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Авторизация"
        android:textSize="60sp" />

    <Button
        android:id="@+id/authorizationToCareer"
        android:layout_width="460dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:text="Сотрудник карьера"
        android:textSize="34sp" />

    <Button
        android:id="@+id/authorizationToMainOffice"
        android:layout_width="460dp"
        android:layout_height="150dp"
        android:layout_marginTop="35dp"
        android:text="Диспетчер и технический отдел"
        android:textSize="34sp" />

</androidx.appcompat.widget.LinearLayoutCompat>