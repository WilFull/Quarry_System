<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dispetcher.reporting.ChoiceReportingFragment">

    <Button
        android:id="@+id/reporting1"
        android:layout_width="720dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Дневная отчётность по оборудованию"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <Button
        android:id="@+id/reporting2"
        android:layout_width="720dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Сводная таблица погрузочного оборудования"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reporting1" />

    <Button
        android:id="@+id/reporting3"
        android:layout_width="720dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Процент суточного объёма работ от общей суммы"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reporting2" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Выбор отчётности"
        android:fontFamily="sans-serif-black"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>