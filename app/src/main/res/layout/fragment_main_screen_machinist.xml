<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".machinist.MainScreenMachinistFragment">

    <TextView
        android:id="@+id/btmToCareerEmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Сотрудник 230202"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLocation1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Место погрузки: 131-342"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btmToCareerEmp" />

    <TextView
        android:id="@+id/textViewLocation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:text="Место разгрузки: Ф14"
        app:layout_constraintStart_toStartOf="@+id/textViewLocation1"
        app:layout_constraintTop_toBottomOf="@+id/btmToCareerEmp"
        tools:textSize="20sp" />

    <TextView
        android:id="@+id/textViewLocationInput2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLocation2"
        app:layout_constraintStart_toEndOf="@+id/textViewLocation2"
        app:layout_constraintTop_toTopOf="@+id/textViewLocation2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewLocationInput1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLocation1"
        app:layout_constraintStart_toEndOf="@+id/textViewLocation1"
        app:layout_constraintTop_toTopOf="@+id/textViewLocation1"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="130dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btmToCareerEmp" />

    <Button
        android:id="@+id/buttonLoading"
        android:layout_width="720dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:text="Погрузка завершена"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <Button
        android:id="@+id/buttonUnloading"
        android:layout_width="720dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:text="Разгрузка завершена"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLoading" />

    <Button
        android:id="@+id/buttonBreak"
        android:layout_width="420dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp"
        android:text="Перерыв"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonExit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Завершить смену"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>